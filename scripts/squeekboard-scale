#!/bin/bash

# Get the current value of the keyboard scale
current_scale=$(gsettings get sm.puri.Squeekboard keyboard-scale)
notify-send "Your current scale is $current_scale" --icon="/home/furios/.git/fastflx1/files/fastflx1.svg"

# Options for the FastFLX1 tweaks menu
OPTIONS="1. Scale Squeekboard to 0.7\n2. Scale Squeekboard to 0.8\n3. Scale Squeekboard to 0.9\n4. Scale Squeekboard to 1.0\n5. Scale Squeekboard to 1.1\n6. Scale Squeekboard to 1.2\n7. Scale Squeekboard to 1.3\n8. Scale Squeekboard to 1.4\n9. Quit"

# Display the menu and capture the user's selection using wofi
SELECTION=$(echo -e "$OPTIONS" | wofi -d --normal-window --width=100% --height=50%)

# Execute a command based on the selection
case "$SELECTION" in
    "1. Scale Squeekboard to 0.7")
        gsettings set sm.puri.Squeekboard keyboard-scale 0.7
        ;;
    "2. Scale Squeekboard to 0.8")
        gsettings set sm.puri.Squeekboard keyboard-scale 0.8
        ;;
    "3. Scale Squeekboard to 0.9")
        gsettings set sm.puri.Squeekboard keyboard-scale 0.9
        ;;
    "4. Scale Squeekboard to 1.0")
        gsettings set sm.puri.Squeekboard keyboard-scale 1.0
        ;;
    "5. Scale Squeekboard to 1.1")
        gsettings set sm.puri.Squeekboard keyboard-scale 1.1
        ;;
    "6. Scale Squeekboard to 1.2")
        gsettings set sm.puri.Squeekboard keyboard-scale 1.2
        ;;
    "7. Scale Squeekboard to 1.3")
        gsettings set sm.puri.Squeekboard keyboard-scale 1.3
        ;;
    "8. Scale Squeekboard to 1.4")
        gsettings set sm.puri.Squeekboard keyboard-scale 1.4
        ;;
    "9. Quit")
        exit 0
        ;;
    *)
        echo "Invalid selection. Exiting."
        exit 1
        ;;
esac